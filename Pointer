// Pointer and Array 


#include<iostream>
using namespace std;

int main(){
int marks[]={12,23,45,4}; 
int mathmarks[4];
mathmarks[0]=23; 
mathmarks[1]=234; 
mathmarks[2]=123; 
mathmarks[3]=45; 
cout<<"------------";
cout<<endl;
//cout<<"these marks"<<endl;
marks[2]=555; ///change the array
//cout<<marks[0]<<endl;
//cout<<marks[1]<<endl;
//cout<<marks[2]<<endl; 
//cout<<marks[3]<<endl; 
//cout<<"these are math marks"<<endl;
//cout<<mathmarks[0]<<endl; 
//cout<<mathmarks[1]<<endl; 
//cout<<mathmarks[2]<<endl; 
//cout<<mathmarks[3]<<endl; 
 
for(int i=0;i<4;i++)
{
    cout<<"the value of marks  "<< i <<"  is    "<<marks[i]<<endl;
}
//Pointer and arrays
int*p=marks;
cout<<*(p++)<<endl;

cout<<*(++p)<<endl;

//cout<<"the value of *p is "<<*p<<endl;
//cout<<"the value of *(p+1) is "<<*(p+1)<<endl;
//cout<<"the value of *(p+2) is "<<*(p+2)<<endl;
//cout<<"the value of *(p+3) is "<<*(p+3)<<endl;

    return 0;
}



